<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="#2A2A2A">

    <FrameLayout 
        android:layout_width="90dip"
        android:layout_height="90dip">
      
    <example.networkme.views.SquareImageView
        android:id="@+id/login_media_icon_fb"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:padding="10dip"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    </FrameLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip" >

            <TextView
                android:id="@+id/log_in_platform_fb"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="#2A2A2A"
                android:gravity="center_vertical"
                android:paddingLeft="4dip"
                android:text="Platform"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <com.facebook.widget.LoginButton
                android:id="@+id/log_in_out_button_fb"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_gravity="right"
				android:background="#a3a3a3"
                android:padding="3dip" 
                android:textStyle="italic"
                android:typeface="sans"/>
        </FrameLayout>

        <FrameLayout
            android:layout_height="40dip"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/platform_status_fb"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="#151515"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="Available"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <example.networkme.views.SquareImageView
                android:id="@+id/status_indicator_fb"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:paddingRight="10dip"
                android:layout_gravity="right" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>