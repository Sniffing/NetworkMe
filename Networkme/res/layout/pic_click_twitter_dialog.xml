<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#AA000000"
    android:orientation="vertical"
    android:weightSum="10" >

    <example.networkme.views.SquareImageView
        android:id="@+id/onclick_twitter_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:id="@+id/onclick_text_image_separator"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight = "2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/onclick_twitter_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#BB000000"
            android:text="Twitter_USERNAME"
            android:textColor="#FFFFFF" />
            
        <TextView
            android:id="@+id/onclick_twitter_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Twitter_TIME"
            android:background="#BB000000"
            android:textColor="#FFFFFF" 
            android:paddingRight="10dip"/>

        <TextView
            android:id="@+id/onclick_twitter_tweet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#BB000000"
            android:text="Tweet"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>