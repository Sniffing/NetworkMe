<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#AA000000" >

    <example.networkme.views.SquareImageView
        android:id="@+id/onclick_instagram_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:layout_weight= "8"/>
	
    <LinearLayout
        android:id="@+id/onclick_text_image_separator" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        
    <TextView
        android:id="@+id/onclick_instagram_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text= "INSTAGRAM_USERNAME"
        android:background="#BB000000"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/onclick_instagram_loc_and_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="#BB000000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/onclick_instagram_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text= "INSTAGRAM_LOCATION"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/onclick_instagram_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text= "INSTAGRAM_TIME"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/onclick_instagram_hashtags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text= "INSTAGRAM_HASHTAGS"
        android:background="#BB000000"
        android:textColor="#FFFFFF" />
	</LinearLayout>
</LinearLayout>